                <td> <para style="RIGHT6">[[ formatLang(l.get('total_with_iva'), dp='Sale Price') ]]</para></td>
                <td> <para style="RIGHT6">[[ l.get('vat_exempt_tot') and formatLang(l.get('vat_exempt_tot'), dp='Sale Price') ]]</para></td>
                <td><para style="CENTRO6">[[ l.get('custom_statement') ]]</para></td>
                <td><para style="RIGHT6">[[ formatLang(l.get('custom_amount'), dp='Sale Price') ]]</para></td>
                <td><para style="RIGHT6">[[ formatLang(l.get('base_tp'), dp='Sale Price') ]]</para> </td>
                <td><para style="CENTRO6">[[ formatLang(l.get('rate_tp') or l.get('vat_reduced_rate_tp') or l.get('vat_additional_rate_tp'), digits=1) ]]</para></td>
                <td><para style="RIGHT6">[[ formatLang(l.get('tax_tp'), dp='Sale Price') ]]</para></td>
                <td><para style="RIGHT6">[[ formatLang(l.get('base_ntp'), dp='Sale Price') ]]</para> </td>
                <td><para style="CENTRO6">[[ formatLang(l.get('rate_ntp') or l.get('vat_reduced_rate_ntp') or l.get('vat_additional_rate_ntp'), digits=1) ]]</para></td>
