<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

<!--
'view/tcv_consig_invoice.xml',
 -->

        <record model="ir.ui.view" id="view_tcv_consig_invoice_search">
            <field name="name">tcv.consig.invoice.search</field>
            <field name="model">tcv.consig.invoice</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="Generate consignment invoice">
                    <group>
                        <filter string="Partner" icon="terp-partner" domain="[]" context="{'group_by':'config_id'}"/>
                        <filter string="Done" icon="gtk-ok" domain="[('state','=','done')]"/>
                    </group>
                    <field name="name"/>
                    <field name="date"/>
                    <field name="partner_id"/>
                </search>
            </field>
        </record>


        <record model="ir.ui.view" id="view_tcv_consig_invoice_tree">
            <field name="name">tcv.consig.invoice.tree</field>
            <field name="model">tcv.consig.invoice</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Generate consignment invoice" colors="red:state in ('draft');gray:state in ('cancel')">
                    <field name="name"/>
                    <field name="date"/>
                    <field name="config_id"/>
                    <field name="partner_id"/>
                </tree>
            </field>
        </record>


        <record model="ir.ui.view" id="view_tcv_consig_invoice_form">
            <field name="name">tcv.consig.invoice.form</field>
            <field name="model">tcv.consig.invoice</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Generate consignment invoice">
                    <field name="name"/>
                    <field name="date"/>
                    <notebook colspan="4">
                        <page string="General">
                            <group col="6" colspan="4">
                                <field name="config_id" widget="selection" on_change="on_change_config_id(config_id)"/>
                                <field name="partner_id" colspan="4"/>
                            </group>
                            <field name="lines" colspan="4" nolabel="1" ref="view_tcv_consignment_lines_readonly_form">
                                <tree string="Detail">
                                    <field name="prod_lot_id" readonly="1"/>
                                    <field name="product_id" readonly="1"/>
                                    <field name="product_uom_qty" readonly="1"/>
                                    <field name="pieces" readonly="1"/>
                                    <field name="line_id" readonly="1"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Other info">
                            <field name="user_id" widget="selection"/>
                            <separator colspan="4" string="Notes"/>
                            <field name="narration" nolabel="1" colspan="4"/>
                        </page>
                    </notebook>
                    <group colspan="4" col="8">
                        <field name="state"/>
                        <button name="button_done" icon="gtk-ok" string="Done" states="draft"/>
                        <button name="button_cancel" icon="gtk-cancel" string="Cancel" states="draft,done"/>
                        <button name="button_draft" icon="terp-stock_effects-object-colorize" string="Reset to draft" states="cancel"/>
                    </group>
                </form>
            </field>
        </record>


        <record model="ir.ui.view" id="view_tcv_consignment_lines_tree">
            <field name="name">tcv.consignment.lines.tree</field>
            <field name="model">tcv.consignment.lines</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="">
                    <field name="prod_lot_id"/>
                    <field name="product_id"/>
                    <field name="product_uom_qty"/>
                    <field name="pieces"/>
                    <field name="line_id"/>
                </tree>
            </field>
        </record>


    </data>
</openerp>
